---
component: article
---

<article class="article {{class}}">
	{{#if title}}
	<header class="article__header">
		<h2>
      {{#if url}}<a href="{{url}}">{{/if}}
      {{title}}
      {{#if url}}</a>{{/if}}
    </h2>
  </header>
  {{/if}}
  {{#if body}}
  <div class="article__details">
    {{{body}}}
  </div>
  {{/if}}
  {{#if urlText}}
  <footer class="article__footer">
    <a href="{{url}}">{{urlText}}</a>
  </footer>
  {{/if}}
</article>
