---
title: Layout Post
---

{{#extend "master"}}

{{!-- Main Content --}}
{{#content "master-body"}}

{{>banner}}

<main id="main" class="main main--post" role="main">

  <article id="{{slugify title}}" class="post">

    {{#if_block "post__summary"}}
    <blockquote class="summary">
      {{#block "post-summary"}}{{/block}}
    </blockquote>
    {{/if_block}}

    {{#if_block "post-content"}}
    {{#block "post-content"}}{{/block}}
    {{/if_block}}

    {{#if_block "post-tldr"}}
    <footer class="post__footer">
      <h3 id="TLDR">TL;DR</h3>
      {{#block "post-tldr"}}{{/block}}

      <hr />
    </footer>
    {{/if_block}}

    {{>comments}}

  </article>

  <aside class="post__sidebar">
    <h1>sidebar</h1>
    <h2>all</h2>
    <h3>of</h3>
    <h4>the</h4>
    <h5>things</h5>
    <h6>!</h6>
    <p>{{emoji 'hushed'}}</p>
  </aside>

</main>

{{/content}}

{{!-- Additional Content for <head> and just before </body> --}}
{{#content "master-head" mode="extend"}}
{{#block "head"}}{{/block}}
{{/content}}

{{#content "master-foot" mode="extend"}}
{{#block "foot"}}{{/block}}
{{/content}}

{{/extend}}
