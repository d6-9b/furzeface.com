---
title: Blog
pageClass: page-blog
---

{{#extend "layout-page"}}

{{#content "page-header"}}

{{>banner-blog}}

{{/content}}

{{#content "page-content"}}

<ul class="articles-list">
  {{#each posts.page1}}
  <li class="articles-list__item">
    <h1>
      <a href="/{{slug}}" class="articles-list__link" {{#if external}}rel="external"{{/if}}>{{title}}</a>
    </h1>
    <p>{{summary}}</p>
    <time datetime="{{pubDate}}" pubdate="{{pubDate}}" class="updated published">{{pubDate}}</time>
  </li>
  {{/each}}
</ul>

<nav class="articles-pagination">
  <ul class="list-unstyled">
    <li class="next"><a href="/blog/2">Next &rarr;</a> </li>
  </ul>
</nav>

{{/content}}

{{/extend}}
